version: '3'  # Use the version of Docker Compose syntax

services:    # Define the services (containers) of the application

  web:       # Service name
    image: nginx:latest  # Docker image to use for this service
    ports:
      - "8080:80"  # Map port 8080 on the host to port 80 in the container

  app:       # Another service
   
    environment:
      - DATABASE_URL=postgres://user:password@db:5432/mydatabase  # Example environment variable

  db:        # Database service
    image: postgres:latest
    environment:
      - POSTGRES_USER=user
      - POSTGRES_PASSWORD=password
      - POSTGRES_DB=mydatabase

FROM <base_image>

# Set working directory to /app
WORKDIR /app

# Copy PostgreSQL configuration file
COPY postgresql.conf /etc/postgresql/postgresql.conf

# Set company label information
LABEL maintainer="Your Name <your.email@example.com>"
LABEL company.name="Your Company Name"
LABEL company.phone="123-456-7890"
LABEL company.address="123 Company St, City, Country"
